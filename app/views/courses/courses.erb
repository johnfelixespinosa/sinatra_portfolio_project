<h1> Courses by: <%= current_user.username %> </h1>

<% if flash[:message] %>
  <strong><font color=red><%= flash[:message] %></strong></font>
<% end %>

<% current_user.courses.each do |c| %>

<!-- <div class="span4" style="position:absolute;left=300px;"> -->
    <%= c.course_name %></div>
<!-- <div class="span4" style="padding-bottom:10px"> -->
      Instructor: <%= c.course_instructor %>

<div class="description" style="padding-bottom:10px">
  Course Description: <%= c.course_description %>

<div class="span4" style="padding-bottom:10px">

                  Course Credits: <%= c.course_credits %>
            <form method="post" action="/courses/<%= c.id %>/delete">
              <input id="hidden" type="hidden" name="_method" value="DELETE">
              <input class="btn btn-primary" type="submit" value="Cancel <%= c.course_name %>">
            </form>


<% end %>

